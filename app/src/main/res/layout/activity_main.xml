<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.SearchView

        android:id="@+id/searchView"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/search_view_bg"
        app:iconifiedByDefault="false"
        app:queryHint="Search Here" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="375dp"
        android:layout_height="577dp"
        android:layout_above="@id/fab"
        android:layout_alignParentTop="true"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="-11dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="32dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:src='@drawable/ic_baseline_addmark'
        android:contentDescription="Add a new task"
        />

    <ImageButton
        android:id="@+id/faqBtn"
        android:layout_width="108dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/fab"
        app:srcCompat="@drawable/faqs"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnall"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="153dp"
        android:layout_toStartOf="@+id/btncat1"
        android:text="All"
        android:textSize="10sp"
        app:backgroundTint="#CDDC39" />

    <Button
        android:id="@+id/btncat1"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_below="@+id/searchView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="29dp"
        android:textSize="10sp"
        android:text="Category1"
        app:backgroundTint="#CDDC39" />

    <Button
        android:id="@+id/btncat2"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:layout_below="@+id/searchView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="159dp"
        android:textSize="10sp"
        android:text="Category 2"
        app:backgroundTint="#CDDC39" />


</RelativeLayout>
